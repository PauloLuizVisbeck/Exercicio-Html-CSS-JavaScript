@model AulaEntity.Models.Compromisso

@{
    ViewData["Title"] = "Editar";    
}

<h1>Editar Contato</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <!-- Contato -->
    <div class="form-group">
        <label asp-for="Contato" class="control-label"></label>
        <select asp-for="ContatoId" class="form-control" asp-items="@ViewBag.Contatos">
            <option value="">Selecione um Contato</option>
        </select>
        <span asp-validation-for="ContatoId" class="text-danger"></span>
    </div>

    <!-- Local -->
    <div class="form-group">
        <label asp-for="LocalId" class="control-label"></label>
        <select asp-for="LocalId" class="form-control" asp-items="@ViewBag.Locais">
            <option value="">Selecione um Local</option>
        </select>
        <span asp-validation-for="LocalId" class="text-danger"></span>
    </div>

    <!-- Outros campos do Compromisso -->
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Data" class="control-label"></label>
        <input asp-for="Data" class="form-control" />
        <span asp-validation-for="Data" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
</form>
